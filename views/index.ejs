<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    
    <a href="/new">Scrivi nuovo messaggio</a>
    
    <div>
        <% messages.forEach((message) => { %>
            <div style="border: 1px solid #ccc; margin: 10px; padding: 10px;">
                <strong><%= message.user %></strong>
                <p><%= message.text %></p>
                <small><%= message.added.toLocaleString() %></small>
            </div>
        <% }); %>
    </div>
</body>
</html>